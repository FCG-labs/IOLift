{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["es6"],
        "noImplicitAny": false,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./",
        "outDir": "bin",
        "jsx": "react",
        "removeComments": true,
        "baseUrl": "src",
        "declaration": true,
        "skipLibCheck": true,
        "paths": {
            "~/*": ["*"],
            "@/*": ["*"],
        },
        "esModuleInterop": true,
    },
    "exclude": [
        "Examples/CodePushDemoApp",
        "code-push.config.example.*"
    ]
}
